
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <form enctype="" asp-controller="User" asp-action="Register" method="post" class="p-4 bg-white rounded shadow mt-5 mb-5">
        <h1 class="text-center">Register</h1>
        <p class="text-center">Please fill in the details.</p>
        <div class="form-group row p-2">
            <label for="Name" class="col-sm-3 col-form-label">Name</label>
            <div class="col-sm-9">
                <input type="text" class="form-control" name="Name" id="Name">
            </div>
        </div>
        <div class="form-group row p-2">
            <label for="Description" class="col-sm-3 col-form-label">Description</label>
            <div class="col-sm-9">
                <input type="text" class="form-control" name="Description" id="Description" placeholder="Your previous medical conditions">
            </div>
        </div>
        <div class="form-group row p-2">
            <label for="PhoneNumber" class="col-sm-3 col-form-label">Phone Number</label>
            <div class="col-sm-9">
                <input type="text" class="form-control" name="PhoneNumber" id="PhoneNumber">
            </div>
        </div>
        <div class="form-group row p-2">
            <label for="DOB" class="col-sm-3 col-form-label">Date Of Birth</label>
            <div class="col-sm-9">
                <input type="date" class="form-control" id="DOB" name="DOB">
            </div>
        </div>
        <div class="form-group row p-2">
            <label for="Email" class="col-sm-3 col-form-label">Email</label>
            <div class="col-sm-9">
                <input type="email" class="form-control" name="Email" id="Email">
            </div>
        </div>
        <div class="form-group row p-2">
            <label for="UserName" class="col-sm-3 col-form-label">User Name</label>
            <div class="col-sm-9">
                <input type="text" class="form-control" name="UserName" id="UserName">
            </div>
        </div>
        <div class="form-group row p-2">
            <label for="Password" class="col-sm-3 col-form-label">Password</label>
            <div class="col-sm-9">
                <input type="password" class="form-control dropify" name="Password" id="Password">
            </div>
        </div>
        <div class="form-group row p-2">
            <label for="ConfirmPassword" class="col-sm-3 col-form-label">Confirm Password</label>
            <div class="col-sm-9">
                <input type="password" class="form-control dropify" name="ConfirmPassword" id="ConfirmPassword">
            </div>
        </div>
        <div class="form-group row p-2">
            <label for="Gender" class="col-sm-3 col-form-label">Gender</label>
            <div class="col-sm-9">
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="Gender" id="Male" value="Male" checked>
                    <label class="form-check-label" for="Male">
                        Male
                    </label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="Gender" id="Female">
                    <label class="form-check-label" for="Female">
                        Female
                    </label>
                </div>
            </div>
        </div>
        <div class="form-group row p-2">
            <label for="Location" class="col-sm-3 col-form-label">Location</label>
            <div class="col-sm-9">
                <select class="form-select" name="Location" id="Location">
                    <option selected>Open this select menu</option>
                    @foreach (var item in Model)
                    {
                        <option value="@item.Id">@item.Name</option>
                    }
                </select>
            </div>
        </div>
        <div class="form-group row justify-content-center p-2">
            <button type="submit" class="btn btn-primary">Register</button>
        </div>
    </form>
</div>

