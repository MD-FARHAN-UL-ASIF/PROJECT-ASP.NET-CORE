
@{
    ViewData["Title"] = "GetMedicine";
    Layout = "~/Views/Shared/_CustomerLayout.cshtml";
}


<div class="container">
    <form enctype="multipart/form-data" asp-controller="Prescription" asp-action="GetMedicine" method="post" class="p-4 bg-white rounded shadow mt-5 mb-5">
        <h1 class="text-center">Order Medicine</h1>
        <p class="text-center">Please fill in the details.</p>
        <div class="form-group row p-2">
            <label for="PhoneNumber" class="col-sm-3 col-form-label">Phone Number</label>
            <div class="col-sm-9">
                <input type="text" class="form-control" name="PhoneNumber" id="PhoneNumber">
            </div>
        </div>
        <div class="form-group row p-2">
            <label for="Address" class="col-sm-3 col-form-label">Address</label>
            <div class="col-sm-9">
                <input type="text" class="form-control" name="Address" id="Address">
            </div>
        </div>
        
        <div class="form-group row p-2">
            <label for="PictureLink" class="col-sm-3 col-form-label">Prescription</label>
            <div class="col-sm-9">
                <input type="file" class="form-control" id="PictureLink" name="PictureLink">
            </div>
        </div>
        
        <div class="form-group row justify-content-center p-2">
            <button type="submit" class="btn btn-primary">Order</button>
        </div>
    </form>
</div>


