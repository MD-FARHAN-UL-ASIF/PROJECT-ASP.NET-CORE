
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";

    var usertype = Context.Session.GetString("role");
    if (usertype != "Admin")
    {
        <script>
            window.location.href = '/user/login';
        </script>
    }
}

<div class="container">
    <form enctype="multipart/form-data" asp-controller="Product" asp-action="Create" method="post" class="p-4 bg-white rounded shadow mt-5 mb-5">
        <h1 class="text-center">Create Product</h1>
        <p class="text-center">Please fill in the details.</p>
        <div class="form-group row p-2">
            <label for="Name" class="col-sm-3 col-form-label">Name</label>
            <div class="col-sm-9">
                <input type="text" class="form-control" name="Name" id="Name">
            </div>
        </div>
        <div class="form-group row p-2">
            <label for="Description" class="col-sm-3 col-form-label">Description</label>
            <div class="col-sm-9">
                <input type="text" class="form-control" name="Description" id="Description">
            </div>
        </div>
        <div class="form-group row p-2">
            <label for="CategoryID" class="col-sm-3 col-form-label">Category</label>
            <div class="col-sm-9">
                <select class="form-select" name="CategoryID" id="CategoryID">
                    <option selected>Open this select menu</option>
                    @foreach (var item in Model)
                    {
                        <option value="@item.Id">@item.Name</option>
                    }
                </select>
            </div>
        </div>
        <div class="form-group row p-2">
            <label for="Price" class="col-sm-3 col-form-label">Price</label>
            <div class="col-sm-9">
                <input type="number" class="form-control" id="Price" name="Price">
            </div>
        </div>
        <div class="form-group row p-2">
            <label for="Manufacturer" class="col-sm-3 col-form-label">Manufacturer</label>
            <div class="col-sm-9">
                <input type="text" class="form-control" name="Manufacturer" id="Manufacturer">
            </div>
        </div>
        <div class="form-group row p-2">
            <label for="ExpiryDate" class="col-sm-3 col-form-label">ExpiryDate</label>
            <div class="col-sm-9">
                <input type="date" class="form-control" name="ExpiryDate" id="ExpiryDate">
            </div>
        </div>
        <div class="form-group row p-2">
            <label for="PictureLink" class="col-sm-3 col-form-label">PictureLink</label>
            <div class="col-sm-9">
                <input type="file" class="form-control dropify" name="PictureLink" id="PictureLink">
            </div>
        </div>
        <div class="form-group row justify-content-center p-2">
            <button type="submit" class="btn btn-primary">Add Product</button>
        </div>
    </form>
</div>
